<section class="cart py-16">

    <% if(session.cart){ %>

        <div class="order container mx-auto w-1/2">
            <div class="flex items-center border-b border-gray-300 pb-4">

                <i class="fas fa-cart-arrow-down cart-icon"></i>

                <!--  <img class="" src="/img/order-cart.png" alt="order cart"> -->
                <h1 class="font-bold ml-4 text-2xl">Your Order Summary</h1>
            </div>


            <div>

                <% for(let foods of Object.values(session.cart.items) ){ %>
                    <div class="flex items-center my-8">
                        <img class="w-24 rounded-xl" src="/img/<%= foods.item.image %>" alt="item">
                        <div class="flex-1 ml-4">
                            <h1>
                                <%= foods.item.name %>
                            </h1>
                        </div>
                        <span class="flex-1">
                            <%= foods.qty %> plate
                        </span>
                        <span class="font-bold text-lg">‚Çπ <%= foods.item.price * foods.qty %></span>
                    </div>
                    <%}%>

            </div>

            <hr>
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount : </span>
                    <span class="amount text-2xl font-bold ml-2"> ‚Çπ <%= session.cart.totalPrice %></span>
                </div>
                <% if(user){ %>
                <div>
                    <form class="mt-12" action="/orders" method="POST">
                        <input name="phoneNumber" class="border border-gray-400 p-1 w-1/2 mb-4" type="text"
                            placeholder="Enter Phone Number">
                        <input name="address" class="border border-gray-400 p-3 w-1/2" type="text" placeholder="Enter Your Address">
                        <div>
                          <button type="submit" class="px-6 py-2 rounded-full font-bold text-white mt-4 order-btn">Place order</button>
                        </div>

                    </form>
                </div>
                <% }else{ %>
                <a class="inline-block cursor-pointer px-6 py-2 rounded-full font-bold text-white mt-4 order-btn"
                    href="/login">Login to Continue</a>
                    <% } %>
            </div>

        </div>

        <% }else{ %>

            <div class="empty-cart py-12">

                <div class="container mx-auto text-center">
                    <h1 class="text-3xl font-bold mb-2">Your Cart is Now Empty üçΩÔ∏è</h1>

                    <p class="text-gray-500">You have not ordered any food yet.<br>
                        To order food, go to the home page.
                    </p>

                    <img class="w-1/4 mx-auto" src="/img/empty-cart.png" alt="empty cart">
                    <a href="/" class="inline-block px-6 py-2 rounded-full text-white font-bold mt-5 order-btn">Add foods</a>
                </div>

            </div>
            <% } %>
</section>